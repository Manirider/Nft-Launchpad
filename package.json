{
  "name": "generative-nft-launchpad",
  "version": "1.0.0",
  "description": "Complete NFT launchpad with smart contracts and Next.js frontend",
  "main": "hardhat.config.js",
  "scripts": {
    "dev": "npm --prefix frontend run dev",
    "frontend:dev": "npm --prefix frontend run dev",
    "frontend:build": "npm --prefix frontend run build",
    "frontend:start": "npm --prefix frontend run start",
    "contract:compile": "hardhat compile",
    "contract:test": "hardhat test",
    "contract:coverage": "hardhat coverage",
    "contract:deploy": "hardhat run scripts/deploy.js",
    "contract:deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "contract:deploy:mainnet": "hardhat run scripts/deploy.js --network ethereum",
    "merkle:generate": "node scripts/generate-merkle.js",
    "ipfs:upload": "node scripts/upload-ipfs.js",
    "node:start": "hardhat node",
    "node:fork": "hardhat node --fork $RPC_URL",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "install:all": "npm install && npm --prefix frontend install"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.3.11"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.1.0",
    "solidity-coverage": "^0.8.5"
  }
}
